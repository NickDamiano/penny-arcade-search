<img src="<%= @comic.img_url %>">
<%= form_tag('/tagger', method: 'post') do %>
	<%= label_tag(:tagger, "Tags") %>
	<%= text_field_tag(:tagger) %>
	<%= submit_tag("Submit") %>
<% end %>
<script type="text/javascript">
	tag_field = document.getElementById("tagger")
	tag_field.value = @tags
	tag_field.focus()
</script>
